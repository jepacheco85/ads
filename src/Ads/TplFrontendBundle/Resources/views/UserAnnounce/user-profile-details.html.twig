<div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title"><a href="#collapseB1" data-toggle="collapse"> My
                                        details </a></h4>
                                </div>
                                <div class="panel-collapse collapse in" id="collapseB1">
                                    <div class="panel-body">
                                      {#<form action="{{ path('user_profile_edit_details') }}" method="POST" class="form-horizontal" role="form" {{ form_enctype(form) }}>#}
                                      {{ form_start(form, {'action': path('user_profile_edit_details'), 'method': 'POST'}) }}  
                                            
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">First Name</label>

                                                <div class="col-sm-9">
                                                    {{ form_widget(form.name, {'attr':{'class':'form-control' }}) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Last name</label>

                                                <div class="col-sm-9">
                                                    {{ form_widget(form.lastname, {'attr':{'class':'form-control' }}) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3 control-label">Email</label>

                                                <div class="col-sm-9">
                                                    {{ form_widget(form.email, {'attr':{'class':'form-control' }}) }}
                                                </div>
                                            </div>
                                                                                     
                                            <div class="form-group">
                                                <label for="Phone" class="col-sm-3 control-label">Phone</label>

                                                <div class="col-sm-9">
                                                    {{ form_widget(form.cel, {'attr':{'class':'form-control' }}) }}
                                                </div>
                                            </div>
                                                
                                            <div class="form-group">
                                                <label for="Phone" class="col-sm-3 control-label">Phone</label>

                                                <div class="col-sm-9">
                                                    {{ form_widget(form.sex, {'attr':{'class':'selecter-selected' }}) }}
                                                </div>
                                            </div>    
                                                
                                            <div class="form-group">
                                                <label for="Avatar" class="col-sm-3 control-label">Avatar</label>

                                                <div class="col-sm-9">
                                                    {#<input type="file" id="ads_userbundle_usertype_avatar" name="avatar"/>#}
                                                    {{ form_widget(form.avatar) }}
                                                </div>
                                            </div>      

                                            
                                            <div class="form-group">
                                                <div class="col-sm-offset-3 col-sm-9"></div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-sm-offset-3 col-sm-9">
                                                    <button type="submit" class="btn btn-default">Update</button>
                                                </div>
                                            </div>
                                        {{ form_rest(form) }}
                                      {{ form_end(form) }}
                                    </div>
                                </div>
</div>